.calculator-story_card('[ngClass]'="{'story_card-expanded': isExpanded}")
  .story_preview
    .story_card-info
      span {{story.note}}
      span {{story.result}}%
    .story_card-meta
      span {{story.date | date: 'd MMM y'}}
      span подробнее
  .story_full
    .story_full-title
      .story_title
        span.note {{story.note}}
        span.type {{story.type}}
      span.date {{story.date | date: 'd MMM y'}}
    .story_full-result
      ul
        li
          span FTP:
          span {{story.ftp}}%
        li
          span Валовая маржа:
          span {{story.gross}}
        li
          span Скидка:
          span {{story.decent}}
        li
          span Итого:
          span {{story.result}}
    .story_full-action
      rosa-button('[button]'="'link'" '[size]'="'small'"  type="'button'")
        ng-container(class="button-inner_content")
          span Скопировать ссылку
